@import 'nib'

html
	font-family 'Open Sans', sans-serif

a
	text-decoration none

.section-inner
	width 1280px
	max-width 90%
	margin 0 auto	
	position relative

// Шапка
.navigation
	width 100%
	background #1d1d1d
	
.main-menu
	margin 0
	padding 0
	list-style none
	padding 20px
	
	li
		display inline
		position relative
		transition-duration 0.3s
		
	a
		font-size 1.1em
		color #999
		padding 25px
		
		:hover
			cursor pointer
			color #fff
		
.slash:before
	content "/"
	display block
	position absolute
	right 0
	top 50%
	margin-top -9px
	margin-right -24px
	font-size 18px
	color #444
	font-weight 300
	z-index 1000
	
.menu-social
	position absolute
	right 0
	top 50%
	margin-top -18px
	list-style none
	
	li
		float left
		margin-left 10px
		text-align center
		
		:hover
				background #ca2017
		
		a
			display block
			width 36px
			height 36px
			background #333
			color #fff
			border-radius 999px
			position relative
			transition-duration 0.3s
			
			i
				margin-top 9px
// end header

// Title
#star
	background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%)
	width 100%
	position absolute
	top 0
	right 0
	left 0
	z-index -1

.title
	text-align center
	padding 60px 0
	color white
	
.blog-title > a
	display inline-block
	font-weight 900
	font-size 3em
	color #fff
	text-decoration none
	position relative
	text-shadow 1px 1px 3px rgba(0,0,0,0.1)
// Title end



.post
	background white
	margin-top 40px
	